doctype html
html
  head
    title Order
  body
    h1 Order
    p Order ID: #{order.id}
    p User ID: #{order.userId}
    p Email: #{order.email}
    p Status: #{order.status}
    p Items:
    ul
      each item in order.OrderItems
        li
          p Item ID: #{item.id}
          p SKU: #{item.sku}
          p Quantity: #{item.qty}
          p Name: #{item.name}
          p Price: #{item.price}